# ===============================================
# BACKUP STORAGE CONFIGURATION
# ===============================================

# Storage mode: 'cloud' (S3/R2) or 'local' (local directory)
# Default: 'cloud'
BACKUP_STORAGE="cloud"

# Local backup path (required if BACKUP_STORAGE=local)
# This path will contain subdirectories: db-backup/ and files-backup/
LOCAL_BACKUP_PATH="/path/to/backup/folder"

# ===============================================
# CLOUD STORAGE PROVIDER (AWS S3 or Cloudflare R2)
# ===============================================

# Use 'aws' for AWS S3 or 'r2' for Cloudflare R2
# Only required if BACKUP_STORAGE=cloud
STORAGE_PROVIDER="r2"

# Cloudflare R2 Configuration (if STORAGE_PROVIDER=r2)
R2_ACCOUNT_ID="TODO"
R2_ACCESS_KEY_ID="TODO"
R2_SECRET_ACCESS_KEY="TODO"
R2_BUCKET="TODO"

# AWS S3 Configuration (if STORAGE_PROVIDER=aws)
AWS_ACCESS_KEY_ID="TODO"
AWS_SECRET_ACCESS_KEY="TODO"
AWS_S3_BUCKET="TODO"
AWS_S3_REGION="us-east-1"

# ===============================================
# DATABASE CONFIGURATION
# ===============================================

# New Format (Recommended): Multiple databases (PostgreSQL and/or MSSQL)
# JSON array with database configurations
DATABASE_CONFIGS='[
  {
    "type": "postgresql",
    "name": "my_postgres_db",
    "connectionString": "postgresql://user:password@localhost:5432/dbname"
  },
  {
    "type": "mssql",
    "name": "my_mssql_db",
    "host": "localhost",
    "port": 1433,
    "database": "dbname",
    "user": "sa",
    "password": "YourPassword123",
    "options": {
      "encrypt": true,
      "trustServerCertificate": true
    }
  }
]'

# Legacy Format (Still Supported): Single PostgreSQL database
BACKUP_DATABASE_URL="postgresql://user:password@localhost:5432/dbname"

# Path to PostgreSQL tools (required for PostgreSQL backups)
# Include trailing slash
PG_DUMP_PATH="/usr/bin/"

# ===============================================
# FILES BACKUP CONFIGURATION
# ===============================================

# Option 1: Local directory path
FILES_BACKUP_PATH="/path/to/files/"

# Option 2: URL to download files backup (zip file)
FILES_BACKUP_URL="https://example.com/files-backup.zip"

#Option 3: To download item by item
FILES_BACKUP_LISTING_URL="https://example.com/uploads/list-all-files?password=123456"

# ===============================================
# SCHEDULE CONFIGURATION
# ===============================================

# Run backup immediately when the application starts
RUN_ON_STARTUP="true"

# Cron expression for scheduled backups
# Examples:
# - Every minute: * * * * *
# - Every hour: 0 * * * *
# - Every day at 2 AM: 0 2 * * *
# - Every Sunday at 3 AM: 0 3 * * 0
CRON_JOB_INTERVAL="0 2 * * *"